{
  "name": "code-editor-app",
  "version": "1.0.0",
  "description": "Une mini-application Telegram pour éditer et exécuter du code",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "tailwindcss -i src/styles/tailwind.css -o public/styles/tailwind.css --minify",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.17.1",
    "monaco-editor": "^0.34.0",
    "tailwindcss": "^3.0.0",
    "helmet": "^5.0.0",
    "express-rate-limit": "^6.0.0",
    "hpp": "^0.2.3",
    "dotenv-flow": "^3.2.0",
    "joi": "^17.6.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.0.0",
    "jest": "^27.4.0",
    "nodemon": "^2.0.15"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
